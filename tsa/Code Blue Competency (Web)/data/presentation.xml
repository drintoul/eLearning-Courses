		<slide index="10" title="Conscious Injured Diver" titleNormalized="conscious injured diver" src="slide11.swf" size="2189" advanceOnTime="0" framesCount="1" hasEmbeddedFlashClip="0" hidden="0" level="0" advanceOnClick="1" thumbnailAssetId="">
